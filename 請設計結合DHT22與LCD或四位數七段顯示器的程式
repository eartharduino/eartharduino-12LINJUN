請運用DHT22+LCD或四數位七段顯示器(兩者選一)，設計程式，讓溫度(攝氏)及相對溼度資料在顯示器上呈現。
完成期限：108年10月30日
/*  Lab9 DHT22 程式碼*/

/* DHT22 接線方式
GND --> GND
VCC --> 5V
DAT --> pin3
*/

#include "DHT.h"        // 匯入DHT函式庫
#define DHTPIN 3       // 定義DHT函式庫中，所使用的訊號來源
#define DHTTYPE DHT22   // 定義DHT函式庫中，所使用的感測器
DHT dht(DHTPIN, DHTTYPE);


void setup() {
  Serial.begin(9600);
  Serial.println("DHTxx test!");
/*設定序列埠監控視窗，並輸出文字*/
  dht.begin();
  pinMode(13,OUTPUT);
  pinMode(11,OUTPUT);
}

void loop() {

  delay(2000);                         // 每次測量間隔

  //每次讀取溫度或濕度大約會花 250 milliseconds
  float dhtT = dht.readTemperature();    //設定浮點變數dhtT，讀取溫度
  float dhtH = dht.readHumidity();       //設定浮點變數dhtH，讀取濕度

  Serial.print("Temperature: ");        //序列埠監控視窗印出文字
  Serial.print(dhtT);                   //序列埠監控視窗印出dhtT數值
  Serial.print(" *C ");
  Serial.print("Humidity: ");
  Serial.print(dhtH);                 //序列埠監控視窗印出dhtH數值
  Serial.println(" % ");
if (dhtT>=30)
{digitalWrite(13,HIGH);}
else
{digitalWrite(13,LOW);}
if (dhtH>=80)
{digitalWrite(11,HIGH);}
else
{digitalWrite(11,LOW);}
} 
